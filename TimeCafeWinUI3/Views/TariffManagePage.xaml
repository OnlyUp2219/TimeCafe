<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TimeCafeWinUI3.Views.TariffManagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:TimeCafeWinUI3.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:customControls="using:TimeCafeWinUI3.Styles.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:TimeCafeWinUI3.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:TimeCafeWinUI3.Views"
    xmlns:localModels="using:TimeCafeWinUI3.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TimeCafeWinUI3.Core.Models"
    xmlns:pagination="using:TimeCafeWinUI3.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:TimeCafeWinUI3.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ComboBox
            x:Name="GradientSelector"
            Grid.Row="0"
            Width="200"
            Margin="0,0,0,8"
            HorizontalAlignment="Left"
            SelectedIndex="0"
            SelectionChanged="GradientSelector_SelectionChanged">
            <!--#region Color-->
            <ComboBoxItem Tag="RedGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource RedGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Red" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="OrangeGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource OrangeGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Orange" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="AmberGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource AmberGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Amber" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="YellowGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource YellowGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Yellow" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="LimeGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource LimeGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Lime" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="GreenGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource GreenGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Green" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="EmeraldGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource EmeraldGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Emerald" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="TealGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource TealGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Teal" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="CyanGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource CyanGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Cyan" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="SkyGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource SkyGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Sky" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="BlueGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource BlueGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Blue" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="IndigoGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource IndigoGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Indigo" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="VioletGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource VioletGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Violet" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="PurpleGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource PurpleGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Purple" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="FuchsiaGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource FuchsiaGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Fuchsia" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="PinkGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource PinkGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Pink" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="RoseGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource RoseGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Rose" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="SlateGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource SlateGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Slate" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="GrayGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource GrayGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Gray" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="ZincGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource ZincGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Zinc" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="NeutralGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource NeutralGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Neutral" />
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="StoneGradientBrush">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse
                        Width="25"
                        Height="25"
                        Fill="{ThemeResource StoneGradientBrush}" />
                    <TextBlock VerticalAlignment="Center" Text="Stone" />
                </StackPanel>
            </ComboBoxItem>
            <!--#endregion-->
        </ComboBox>

        <pagination:PaginationControl
            x:Name="TopPaginationControl"
            Grid.Row="1"
            Margin="16"
            HorizontalAlignment="Center"
            ItemsSource="{x:Bind FakeViewModel.Tariffs}"
            PageChanged="OnPageChanged"
            PageSize="16"
            TargetControl="{x:Bind AdaptiveGrid}"
            TotalItems="{x:Bind FakeViewModel.TotalItems, Mode=OneWay}" />

        <controls:AdaptiveGridView
            x:Name="AdaptiveGrid"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            DesiredWidth="600"
            IsItemClickEnabled="True"
            ItemHeight="375"
            SelectionMode="Single">
            <controls:AdaptiveGridView.ItemTemplate>
                <DataTemplate x:DataType="local:Tariff">
                    <Border
                        x:Name="TariffBorder"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderThickness="1"
                        CornerRadius="{StaticResource OverlayCornerRadius}"
                        Loaded="TariffBorder_Loaded">
                        <Grid Padding="{StaticResource ExpanderContentPadding}">

                            <Ellipse
                                Width="185"
                                Height="185"
                                Margin="-92.5,0,0,-92.5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Fill="White"
                                Opacity="0.20"
                                RenderTransformOrigin="0.0,1.0" />

                            <Ellipse
                                Width="290"
                                Height="290"
                                Margin="-145,0,0,-145"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Fill="White"
                                Opacity="0.15"
                                RenderTransformOrigin="0.0,1.0" />

                            <Ellipse
                                Width="400"
                                Height="400"
                                Margin="-200,0,0,-200"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Fill="White"
                                Opacity="0.10"
                                RenderTransformOrigin="0.0,1.0" />

                            <Canvas
                                x:Name="CrossCanvas"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsHitTestVisible="False" />

                            <Canvas
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsHitTestVisible="False">
                                <Ellipse
                                    Canvas.Left="450"
                                    Canvas.Top="-200"
                                    Width="400"
                                    Height="400"
                                    Fill="White"
                                    Opacity="0.10"
                                    RenderTransformOrigin="0.0,1.0" />

                                <Ellipse
                                    Canvas.Left="375"
                                    Canvas.Top="50"
                                    Width="200"
                                    Height="200"
                                    Fill="White"
                                    Opacity="0.10"
                                    RenderTransformOrigin="0.0,1.0" />

                                <Line
                                    Opacity="0.2"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    X1="420"
                                    X2="720"
                                    Y1="-20"
                                    Y2="375" />

                                <Line
                                    Opacity="0.2"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    X1="440"
                                    X2="740"
                                    Y1="-20"
                                    Y2="375" />

                                <Line
                                    Opacity="0.2"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    X1="460"
                                    X2="760"
                                    Y1="-20"
                                    Y2="375" />

                                <Line
                                    Opacity="0.2"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    X1="480"
                                    X2="780"
                                    Y1="-20"
                                    Y2="375" />

                                <Line
                                    Opacity="0.2"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    X1="500"
                                    X2="800"
                                    Y1="-20"
                                    Y2="375" />

                                <Line
                                    Opacity="0.2"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    X1="520"
                                    X2="820"
                                    Y1="-20"
                                    Y2="375" />

                                <Line
                                    Opacity="0.2"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    X1="540"
                                    X2="840"
                                    Y1="-20"
                                    Y2="375" />



                            </Canvas>

                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Style>
                                </StackPanel.Resources>
                                <TextBlock
                                    Name="Title"
                                    Foreground="White"
                                    Style="{StaticResource TitleTextBlockStyle}"
                                    Text="{x:Bind Title}"
                                    TextWrapping="WrapWholeWords" />

                                <Viewbox
                                    Name="TitleIcon"
                                    Height="50"
                                    Margin="0,10,0,20"
                                    Stretch="Uniform">
                                    <Border>
                                        <FontIcon Foreground="White" Glyph="&#xE700;" />
                                    </Border>
                                </Viewbox>

                                <Grid>
                                    <TextBlock
                                        Name="Type"
                                        Foreground="White"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        Text="{x:Bind Type}" />

                                    <TextBlock
                                        Name="Price"
                                        HorizontalAlignment="Right"
                                        FontStyle="Italic"
                                        Foreground="White"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        Text="{x:Bind Price}" />
                                </Grid>

                                <TextBlock
                                    Name="DescriptionTitle"
                                    Foreground="White"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    Text="{x:Bind DescriptionTitle}" />

                                <TextBlock
                                    Name="Description"
                                    Foreground="White"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="{x:Bind Description}" />
                            </StackPanel>

                        </Grid>
                    </Border>
                </DataTemplate>
            </controls:AdaptiveGridView.ItemTemplate>
        </controls:AdaptiveGridView>

        <pagination:PaginationControl
            x:Name="BottomPaginationControl"
            Grid.Row="3"
            Margin="16"
            HorizontalAlignment="Center"
            ItemsSource="{x:Bind FakeViewModel.Tariffs}"
            PageChanged="OnPageChanged"
            PageSize="16"
            TargetControl="{x:Bind AdaptiveGrid}"
            TotalItems="{x:Bind FakeViewModel.TotalItems, Mode=OneWay}" />
    </Grid>

</Page>
