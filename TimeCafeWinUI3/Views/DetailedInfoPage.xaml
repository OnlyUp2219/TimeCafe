<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TimeCafeWinUI3.Views.DetailedInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:Name="headerBackground" 
              HorizontalAlignment="Stretch" 
              VerticalAlignment="Stretch" 
              Background="{ThemeResource SystemControlAcrylicElementBrush}">
            <Button x:Name="GoBackButton" 
                    Content="Go Back" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Background="{ThemeResource SystemAccentColor}" 
                    Click="BackButton_Click" />
        </Grid>

        <Grid x:Name="headerContent" 
              Margin="20,52,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <FontIcon x:Name="detailedImage" 
                     FontFamily="{StaticResource SymbolThemeFontFamily}" 
                     Glyph="&#xE8A5;" 
                     FontSize="96"
                     HorizontalAlignment="Center" />

            <StackPanel x:Name="coordinatedPanel" 
                        Grid.Column="1" 
                        VerticalAlignment="Top" 
                        Margin="20,0">
                <TextBlock Text="{x:Bind DetailedObject.Title}" 
                          Style="{ThemeResource SubheaderTextBlockStyle}" 
                          Margin="0,0,0,10" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Views: " 
                              Style="{ThemeResource SubtitleTextBlockStyle}" 
                              FontWeight="Bold"/>
                    <TextBlock Text="{x:Bind DetailedObject.Views}" 
                              Style="{ThemeResource SubtitleTextBlockStyle}" 
                              Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Likes: " 
                              Style="{ThemeResource SubtitleTextBlockStyle}" 
                              FontWeight="Bold" />
                    <TextBlock Text="{x:Bind DetailedObject.Likes}" 
                              Style="{ThemeResource SubtitleTextBlockStyle}"  
                              Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid x:Name="moreInfoPanel" 
              Grid.Row="1" 
              Margin="10">
            <TextBlock Text="{x:Bind DetailedObject.Description}" 
                      Style="{ThemeResource SubtitleTextBlockStyle}" />
        </Grid>
    </Grid>
</Page> 