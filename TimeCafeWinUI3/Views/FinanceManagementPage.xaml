<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TimeCafeWinUI3.Views.FinanceManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:TimeCafeWinUI3.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:TimeCafeWinUI3.Views"
    xmlns:m="using:TimeCafeWinUI3.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:TimeCafeWinUI3.ViewModels"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.BackgroundTransition>
            <BrushTransition />
        </Grid.BackgroundTransition>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="Управление финансами" />
            <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="Просмотр и управление балансами всех клиентов" />
        </StackPanel>

        <!--  Statistics and Filters  -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Statistics Cards  -->
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="16">
                <Border
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Общая задолженность" />
                        <TextBlock
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Text="{x:Bind ViewModel.TotalDebt, Converter={StaticResource PriceConverter}, Mode=OneWay}" />
                    </StackPanel>
                </Border>

                <Border
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Клиентов с долгами" />
                        <TextBlock
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Text="{x:Bind ViewModel.DebtorsCount, Mode=OneWay}" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!--  Search  -->
            <TextBox
                Grid.Column="1"
                Width="300"
                Margin="16,0"
                PlaceholderText="Поиск по имени или телефону"
                Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Filters  -->
            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                Spacing="8">
                <ToggleSwitch Header="Только должники" IsOn="{x:Bind ViewModel.ShowOnlyDebtors, Mode=TwoWay}" />
                <Button Command="{x:Bind ViewModel.RefreshDataCommand}" Content="Обновить" />
            </StackPanel>
        </Grid>

        <!--  Clients Table  -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Error Message  -->
            <TextBox
                Grid.Row="0"
                IsReadOnly="True"
                BorderThickness="0"
                Background="Transparent"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                TextWrapping="Wrap"
                FontSize="14"
                Padding="0"
                Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />

            <!--  Loading  -->
            <ProgressRing
                Grid.Row="1"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!--  Data Table  -->
            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.FilteredClients, Mode=OneWay}">
                <ListView.Header>
                    <Border
                        Padding="8,4,0,4"
                        Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"
                        CornerRadius="4">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:StickyHeaderBehavior />
                        </interactivity:Interaction.Behaviors>
                        <controls:DataTable ColumnSpacing="16">
                            <controls:DataColumn Content="Клиент" />
                            <controls:DataColumn Content="Телефон" />
                            <controls:DataColumn Content="Баланс" />
                            <controls:DataColumn Content="Задолженность" />
                            <controls:DataColumn Content="Статус" />
                            <controls:DataColumn Content="Действия" />
                        </controls:DataTable>
                    </Border>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="m:ClientBalanceInfo">
                        <controls:DataRow HorizontalAlignment="Left">
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind FullName}" />
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind PhoneNumber}" />
                            <TextBlock VerticalAlignment="Center" Text="{x:Bind Balance, Converter={StaticResource PriceConverter}}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                Text="{x:Bind Debt, Converter={StaticResource PriceConverter}}" />
                            <TextBlock VerticalAlignment="Center" Text="Нет" />
                            <TextBlock VerticalAlignment="Center" />
                            <Button
                                Click="NavigateToClientDetail_Click"
                                Content="Детали"
                                Style="{StaticResource DefaultButtonStyle}"
                                Tag="{Binding}" />
                        </controls:DataRow>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</Page> 