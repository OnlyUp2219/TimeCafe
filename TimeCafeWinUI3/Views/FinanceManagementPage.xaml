<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TimeCafeWinUI3.Views.FinanceManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:behaviors="using:TimeCafeWinUI3.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:TimeCafeWinUI3.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:TimeCafeWinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:TimeCafeWinUI3.ViewModels"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.BackgroundTransition>
            <BrushTransition />
        </Grid.BackgroundTransition>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="{StaticResource MediumLeftTopRightBottomMargin}">
            <TextBlock
                Style="{ThemeResource TitleTextBlockStyle}"
                Text="Управление финансами" />
            <TextBlock
                Style="{ThemeResource BodyTextBlockStyle}"
                Text="Просмотр и управление балансами всех клиентов" />
        </StackPanel>

        <!-- Statistics and Filters -->
        <Grid Grid.Row="1" Margin="{StaticResource MediumLeftTopRightBottomMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Statistics Cards -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel>
                        <TextBlock
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="Общая задолженность" />
                        <TextBlock
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Text="{x:Bind ViewModel.TotalDebt, Converter={StaticResource PriceConverter}, Mode=OneWay}" />
                    </StackPanel>
                </Border>

                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel>
                        <TextBlock
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="Клиентов с долгами" />
                        <TextBlock
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Text="{x:Bind ViewModel.DebtorsCount, Mode=OneWay}" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Search -->
            <TextBox
                Grid.Column="1"
                Margin="16,0"
                PlaceholderText="Поиск по имени или телефону"
                Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="300" />

            <!-- Filters -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <ToggleSwitch
                    Header="Только должники"
                    IsOn="{x:Bind ViewModel.ShowOnlyDebtors, Mode=TwoWay}" />
                <Button
                    Command="{x:Bind ViewModel.RefreshDataCommand}"
                    Content="Обновить" />
            </StackPanel>
        </Grid>

        <!-- Clients List -->
        <Grid Grid.Row="2" Margin="{StaticResource MediumLeftTopRightBottomMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Error Message -->
            <TextBlock
                Grid.Row="0"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- Loading -->
            <ProgressRing
                Grid.Row="1"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Data Grid -->
            <ListView
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.FilteredClients, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                <ListView.Header>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Клиент" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Телефон" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Баланс" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Задолженность" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="4" Text="Статус" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="5" Text="Действия" FontWeight="SemiBold"/>
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding FullName}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding PhoneNumber}" VerticalAlignment="Center"/>
                            <TextBlock 
                                Grid.Column="2" 
                                Text="{Binding Balance, Converter={StaticResource PriceConverter}}" 
                                VerticalAlignment="Center"
                                Foreground="{Binding Balance, Converter={StaticResource StatusColorConverter}, ConverterParameter=Balance}"/>
                            <TextBlock 
                                Grid.Column="3" 
                                Text="{Binding Debt, Converter={StaticResource PriceConverter}}" 
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                Visibility="{Binding Debt, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock 
                                Grid.Column="4" 
                                Text="{Binding IsActive, Converter={StaticResource BooleanToTextConverter}, ConverterParameter=Active|Inactive}" 
                                VerticalAlignment="Center"
                                Foreground="{Binding IsActive, Converter={StaticResource StatusColorConverter}, ConverterParameter=Status}"/>
                            <Button 
                                Grid.Column="5" 
                                Content="Детали" 
                                Command="{Binding DataContext.NavigateToClientDetailCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource DefaultButtonStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page> 